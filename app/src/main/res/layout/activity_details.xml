<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.ui.DetailsActivity">

    <ImageView
        android:id="@+id/blogImageImgV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/blogTitleTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Vancouver PNE 2019"
        android:textSize="18sp"
        android:textColor="#000000"
        android:includeFontPadding="false"
        android:textStyle="bold"
        android:gravity="start"
        android:textAlignment="viewStart"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/blogImageImgV"
        app:layout_constraintStart_toStartOf="@+id/blogImageImgV"
        app:layout_constraintEnd_toEndOf="@+id/blogImageImgV" />

    <TextView
        android:id="@+id/blogBodyTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Here is Jess and I at the Vancouver PNE. We ate a lot of food."
        android:textSize="16sp"
        android:textColor="#707070"
        android:includeFontPadding="false"
        android:gravity="start"
        android:textAlignment="viewStart"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/blogTitleTV"
        app:layout_constraintStart_toStartOf="@+id/blogImageImgV"
        app:layout_constraintEnd_toEndOf="@+id/blogImageImgV" />

</androidx.constraintlayout.widget.ConstraintLayout>
